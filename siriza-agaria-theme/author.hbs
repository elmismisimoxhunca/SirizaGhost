{{!< default}}

{{#author}}
    <section class="author-hero">
        <div class="author-hero-content">
            {{#if profile_image}}
                <img src="{{profile_image}}" alt="{{name}}" class="author-avatar-large">
            {{/if}}
            <h1>{{name}}</h1>
            {{#if bio}}
                <p>{{bio}}</p>
            {{/if}}
            {{#if website}}
                <a href="{{website}}" class="author-website">Visitar sitio web →</a>
            {{/if}}
        </div>
    </section>
{{/author}}

<section class="blog-posts">
    <h2 style="text-align: center; margin-bottom: 2rem;">Publicaciones de {{primary_author.name}}</h2>
    
    {{#if posts}}
        {{#if posts.length}}
            <div class="posts-grid">
                {{#foreach posts}}
                    {{> post-card}}
                {{/foreach}}
            </div>
            
            <nav class="pagination">
                {{#if pagination.prev}}
                    <a href="{{page_url pagination.prev}}">← Anterior</a>
                {{/if}}
                
                <span class="page-number">Página {{pagination.page}} de {{pagination.pages}}</span>
                
                {{#if pagination.next}}
                    <a href="{{page_url pagination.next}}">Siguiente →</a>
                {{/if}}
            </nav>
        {{/if}}
    {{else}}
        <div style="text-align: center; padding: 4rem 2rem;">
            <h2>Aún no hay publicaciones</h2>
            <p>Vuelve pronto para nuevo contenido.</p>
        </div>
    {{/if}}
</section>

<style>
.author-hero {
    text-align: center;
    padding: 4rem 2rem;
    margin-bottom: 3rem;
    border-bottom: 1px solid rgba(212, 168, 71, 0.1);
}

.author-avatar-large {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    border: 3px solid var(--gold);
    object-fit: cover;
    margin-bottom: 2rem;
}

.author-hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--cream);
}

.author-hero p {
    font-size: 1.1rem;
    color: var(--cream);
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto 1.5rem;
}

.author-website {
    display: inline-block;
    color: var(--gold);
    padding: 0.5rem 1rem;
    border: 1px solid var(--gold);
    border-radius: 4px;
    transition: all 0.3s ease;
}

.author-website:hover {
    background: rgba(212, 168, 71, 0.1);
}

@media (max-width: 768px) {
    .author-hero h1 {
        font-size: 1.75rem;
    }
    
    .author-hero p {
        font-size: 1rem;
    }
}
</style>
